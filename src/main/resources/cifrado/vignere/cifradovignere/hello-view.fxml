<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="232.0" prefWidth="644.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cifrado.vignere.cifradovignere.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <AnchorPane prefHeight="182.0" prefWidth="604.0">

        <TextField fx:id="semilla" layoutX="66.0">
            <font>
                <Font size="13.5" />
            </font>
        </TextField>
        <TextArea fx:id="result" editable="false" layoutX="2.0" layoutY="127.0" maxHeight="55.0" maxWidth="600.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="55.0" prefWidth="600.0" promptText="El texto se cifrara aqui ...">
            <font>
                <Font size="14.0" />
            </font>
        </TextArea>
        <TextField fx:id="texto" layoutX="2.0" layoutY="55.0" prefHeight="45.0" prefWidth="600.0" promptText="ingrese el texto a cifrar">
            <font>
                <Font size="13.0" />
            </font>
        </TextField>
        <Label layoutX="2.0" layoutY="5.0" text="Clave">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Button fx:id="start" layoutX="391.0" layoutY="-3.0" mnemonicParsing="false" onAction="#setResult" prefHeight="37.0" prefWidth="119.0" text="Cifrar">
            <font>
                <Font name="Consolas Bold Italic" size="14.0" />
            </font>
        </Button>

    </AnchorPane>

</VBox>
